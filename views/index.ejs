<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs',{otherScript: include('./partials/scripts.ejs',{view:'Home'})})  %>

<body>
    <%- include('./partials/header.ejs')  %> 

    <main class="main">
        
        <%- include('./partials/burguermenu-search.ejs')  %> 

        <section class="home__main__section--banner">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                        class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/home/carrete1.png" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/home/carrete2.png" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/home/carrete3.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </section>
        <section class="main__section__productos">
            <h1>Productos de Última Generación</h1>
            <% nuevos.forEach(({id, title, price, description,image}) => { %>
                <%- include('./partials/articleProduct',{
                    id,
            title,
            price,
            description,
            image
              }
              ) %>
            <% }) %>
          
        </section>
        <section class="main__section__productos-ofertas">
            <h1>Ofertas Imperdibles</h1>
            <% oferta.forEach(({id, title, price, description, image}) => { %>
               <%- include('./partials/articleProduct',{
                     id,
             title,
             price,
             description,
             image
               }
               ) %>
                <% }) %>
           </section>
    
        <section class="main__section__compra">
            <i class="fa-regular fa-credit-card"></i>
            <h4>Pagá hasta en 12 cuotas</h4>
            <i class="fa-sharp fa-solid fa-truck"></i>
            <h4>Recibí tu producto</h4>
            <i class="fa-solid fa-shield-halved"></i>
            <h4>Compra 100% Segura</h4>
        </section>
        <section class="main__section__marcas">
            <h2>Las Mejores Marcas están en AMADEUS</h2>
            <section class="home__main__section--carrouselMarcas">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active" style="width: 90rem;">
                            <div class="row">
                                <div class="col"><img src="/images/home/adata.jpg" class="d-block w-100" alt="...">
                                </div>
                                <div class="col"><img src="/images/home/amd.jpg" class="d-block w-100" alt="..."></div>
                                <div class="col"><img src="/images/home/CORSAIR.jpg" class="d-block w-100" alt="...">
                                </div>
                                <div class="col"><img src="/images/home/cougar.jpg" class="d-block w-100" alt="...">
                                </div>
                                <div class="col"><img src="/images/home/intel.jpg" class="d-block w-100" alt="...">
                                </div>
                                <div class="col"><img src="/images/home/logitech.jpg" class="d-block w-100" alt="...">
                                </div>
                                <div class="col"><img src="/images/home/razer.jpg" class="d-block w-100" alt="...">
                                </div>

                            </div>
                        </div>

    </main>
    
    <%- include('./partials/footer.ejs')  %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


</body>

</html>