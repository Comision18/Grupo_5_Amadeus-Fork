<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs')  %> 
<body>
    <%- include('../partials/header.ejs')  %> 

    <main class="login__main">
        <h1 class="login--titulo">amadeus pc</h1>
        <h4 class="login--subtitulo">mi cuenta</h4>
        <form action="" method="POST" class="login__form">
            <div class="login__form--email">
                <label for="email">Correo Electrónico</label>
                <input name="email" type="email" id="email" value="<%= locals.old && old.email && !locals.errors.email ? old.email : null %>">
                <ul class="errors errorsEmail"></ul>
                <small class="errors"><%= locals.errors && errors.email ? errors.email.msg : null %></small>
            </div>
            <div class="login__form--password">
                <label for="password">Contraseña</label>
                <input name="password" type="password" id="password">
                <ul class="errors errorsPassword"></ul>
                <small class="errors"><%= locals.errors && errors.password ? errors.password.msg : null %></small>
            </div>

            <div class="form__main--registro-email">
                <label for="visible" class="form__main__recordar--container__switch">
                    <input id="visible" type="checkbox" class="form__main__recordar--container__switch-input" name="remember">
                    <span class="form__main__recordar--container__switch-track">
                        <span class="form__main__recordar--container__switch-indicator">
                            <span class="form__main__recordar--container__switch-checkMark">
                                <svg viewBox="0 0 24 24" id="ghq-svg-check" role="presentation" aria-hidden="true">
                                    <path d="M9.86 18a1 1 0 01-.73-.32l-4.86-5.17a1.001 1.001 0 011.46-1.37l4.12 4.39 8.41-9.2a1 1 0 111.48 1.34l-9.14 10a1 1 0 01-.73.33h-.01z"></path>
                                </svg>
                            </span>
                        </span>
                    </span>
                    Recuérdame...
                </label>
            </div>
          
            <button id="submitBtn" type="submit" class="buttonLogin-submit login__form__button--entrar" disabled>Ingresar</button>
<!-- 
            <a class="button google" href="/login/federated/google">Ingresar con Google</a> -->

            <h3 class="login__form--forgetPass"><a href="">¿Olvidaste tu contraseña?</a></h3>
            <h2 class="login__form--registrarse">¿No tenés cuenta? <a href="/users/register">Registrate</a></h2>
            <a class="form__button--google" href="/auth/login/google" class="form__button--google"><img src="/images/logo-google.png" alt=""><p>Ingresar con Google</p></a>
        </form>
    </main>

    <script type="module" src="/js/login.js"></script>
    <%- include('../partials/footer.ejs')  %>
</body>
</html>
