<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

  <body>
    <main>
    <%- include('../partials/header.ejs') %>
    <%- include('../partials/burguermenu-search.ejs') %>
      <section class="main__carrito">
        <div class="main__carrito-titulo">
          <p>Carrito de compras</p></div>
      <section class="main__carrito-subtitulo">
        <div>
         <h4>Detalle de la compra</h4>
        </div>
        </section>
      <!--TABLA DE PRODUCTOS tablet-->
      <section class="main__carrito-tabla">     
        <table class="tabla_cart">
          <thead>
            <tr>
              <th>Imagen</th>
              <th>Nombre del producto</th>
              <th>Cantidad</th>
              <th>Precio unitario</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% productos.forEach(({id,image,name,quantity,price,discount})=> { %>
              <tr>
                <td class="product-image"><img src="/images/productos/<%= image ? image[0].name : 'imageNull.jpeg'%> " alt="Image" width="50"></td>
                <td class="product-name"><%= name %></td>
                <td class="product-quantity"><%= quantity %></td>
                <td class="product-price"><h3>$<%= price*((100-discount)/100) %></h3></td>
                <td class="product-subtotal"><%= quantity * price %></td>
              </tr>
            <% }); %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="4" class="text-end"><strong>Total:</strong></td>
              <td><%=  %></td>
            </tr>
          </tfoot>
        </table>
      </section>
    </div>    
            <!--Detalle de envío-->
            <section class="main__carrito--envío">
              <div class="main__carrito--envío-titulo">
                <p>Detalles del envío</p>
              </div>
              <div class="main__carrito--envío-direccion">
                <p><img class="logo--ubicacion" src="/images/imgCarrito/icono-ubicacion.jpg" alt="">Envío: Calle Falsa
                  123, C.P 5353, Springfield</p>
              </div>
              <h3 class="bonificacion">Total envío con bonificación:</h3>
              <h4 class="precio--p1">$1.789</h4>
              <h3 class="precio--p2">$1.532</h3>
              <div class="contenedor--boton--agregar">
                <button class="boton--agregar">Modificar Dirección</button>
              </div>
              </div>
           
            <h1 class="precio--p3"> Total de tu compra $199.442</h1>
            <!--COMO QUERES PAGAR-->
            <section class="main__carrito--form-pago">
              <div class="conteiner-titulo--div">
                <p class="conteiner-titulo--div--texto">¿Cómo querés pagar?</p>
              </div>
              <div class="conteiner-titulo--div--subtitulo1">
                <input type="checkbox" name="medio-pago" id="medio-pago">
                <p class="conteiner-titulo--div--texto2">Con Mercado Pago</p>
                <img class="logo--mp" src="/images/imgCarrito/unnamed.png" alt="">
              </div>

              </div>

              <div class="conteiner-otrosPagos">
                <p>Otras opciones de pago </p>
                <form class="formulario--metodo--pago" action="/index.html">
                  <label for="debito">
                    <i class="fa-regular fa-credit-card"></i>
                    <input type="radio" name="medio-pago" id="debito">Visa débito ****5762</label>

                  <label for="agregar-credito">
                    <i class="fa-regular fa-credit-card"></i>
                    <input type="radio" name="medio-pago" id="agregar-credito">Nueva tarjeta de crédito</label>
                  <label for="agregardebito">
                    <i class="fa-regular fa-credit-card"></i>
                    <input type="radio" name="medio-pago" id="agregardebito">Nueva tarjeta de débito </label>
                </form>
</div>
                <div class="contenedor--boton--agregar">
                  <button class="boton--agregar">Confirmar</button>
                </div>
              </div>
            </section>
            </div>
          </section>
     </section>
     </section>
      </main>
      <!--FOOTER-->

      <%- include('../partials/footer.ejs') %>


  </body>

</html>